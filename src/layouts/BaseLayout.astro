---
import '../styles/global.css';
import CookieBanner from '../components/CookieBanner.astro';

interface Props {
  title: string;
  description: string;
  lang: string;
  canonicalUrl?: string;
  canonicalPath?: string;
  noindex?: boolean;
  ogImage?: string;
}

const { 
    title, 
    description, 
    lang, 
    canonicalUrl = Astro.url.href, 
    canonicalPath,
    noindex = false,
    ogImage = '/og-image.jpg' 
} = Astro.props;

const siteUrl = 'https://espanolhonesto.com';

// Generate proper canonical and hreflang URLs
// If canonicalPath is provided, use it for dynamic hreflang
// Otherwise, try to extract from current URL
const getAlternateUrl = (targetLang: string): string => {
    if (canonicalPath) {
        // For explicit paths (e.g., "/" for landing, "/blog/my-post" for blog)
        const path = canonicalPath === '/' ? '' : canonicalPath;
        return `${siteUrl}/${targetLang}${path}`;
    }
    // Fallback: extract path from current URL and replace lang
    const currentPath = Astro.url.pathname;
    const pathWithoutLang = currentPath.replace(/^\/(es|en|ru)/, '');
    return `${siteUrl}/${targetLang}${pathWithoutLang}`;
};
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#006064" />
    
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Robots: noindex for private pages -->
    {noindex && <meta name="robots" content="noindex, nofollow" />}
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Español Honesto" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage.startsWith('http') ? ogImage : `${siteUrl}${ogImage}`} />
    <meta property="og:locale" content={lang === 'es' ? 'es_ES' : lang === 'en' ? 'en_US' : 'ru_RU'} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage.startsWith('http') ? ogImage : `${siteUrl}${ogImage}`} />

    <!-- Canonical -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- hreflang for internationalization -->
    <link rel="alternate" hreflang="es" href={getAlternateUrl('es')} />
    <link rel="alternate" hreflang="en" href={getAlternateUrl('en')} />
    <link rel="alternate" hreflang="ru" href={getAlternateUrl('ru')} />
    <link rel="alternate" hreflang="x-default" href={getAlternateUrl('es')} />

    <!-- RSS -->
    <link rel="alternate" type="application/rss+xml" title="Español Honesto Blog" href={`/${lang}/blog/rss.xml`} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Boldonse&family=Unbounded:wght@400;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/pretendard/1.3.9/static/pretendard.min.css">
  </head>
  <body>
    <slot />
    <CookieBanner lang={lang} />
  </body>
</html>

