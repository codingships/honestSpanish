---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ResetPasswordForm from '../../components/ResetPasswordForm.jsx';
import { useTranslations } from '../../i18n/utils';

export async function getStaticPaths() {
    return [
        { params: { lang: 'es' } },
        { params: { lang: 'en' } },
        { params: { lang: 'ru' } }
    ];
}

const { lang } = Astro.params;
const t = useTranslations(lang);

import { ui } from '../../i18n/translations';
const currentLangTranslations = ui[lang];
---

<BaseLayout 
    title={`${t('auth.resetPassword')} | EspaÃ±ol Honesto`} 
    description={t('meta.description')} 
    lang={lang}
    noindex={true}
>
    <div class="min-h-screen bg-[#E0F7FA] flex items-center justify-center p-4">
        <ResetPasswordForm client:load lang={lang} translations={currentLangTranslations} />
    </div>
</BaseLayout>
