---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { useTranslations } from '../../i18n/utils';

export function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'en' } },
    { params: { lang: 'ru' } },
  ];
}

const { lang } = Astro.params;
const t = useTranslations(lang);
---

<BaseLayout title={`Success | ${t('nav.brand')}`} lang={lang} noindex={true}>
  <div class="min-h-screen flex items-center justify-center bg-[#E0F7FA]">
    <div class="text-center p-8 bg-white border-2 border-[#006064] shadow-[8px_8px_0px_0px_#006064]">
      <h1 class="font-display text-4xl text-[#006064] mb-4">¡Pago Exitoso!</h1>
      <p class="font-sans text-lg text-[#006064]/80 mb-8">Gracias por tu suscripción.</p>
      <a 
        href={`/${lang}/campus`}
        class="inline-block bg-[#006064] text-white font-bold py-3 px-6 uppercase tracking-widest hover:bg-[#004d40] transition-colors"
      >
        Ir al Dashboard
      </a>
    </div>
  </div>
</BaseLayout>
