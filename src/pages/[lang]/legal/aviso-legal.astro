        { params: { lang: 'es' } },
        { params: { lang: 'en' } },
        { params: { lang: 'ru' } }
    ];
}

const { lang } = Astro.params;

const content = {
    es: {
        title: 'Aviso Legal',
        description: 'Información legal sobre Español Honesto',
        lastUpdated: 'Última actualización: 13 de enero de 2026',
    },
    en: {
